<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="/stylesheet.css">
    <meta charset="utf-8" />
    <title>Ultra-Rare</title>
</head>

<body>
    
    <nav>
        <a href="/store/new">Add a New Item</a>
    </nav>
    <div class="index-container">
        <h1>Ultra Rare Fight Gear Shop</h1>
        <ul>
            <% products.forEach(product=> { %>
                <li>
                    <!-- making a link to specific item (id) and displaying the name -->
                    <a href="/store/<%=product._id %>">
                        <h3> <%=product.name; %> </h3>
                        <img src=<%=product.img %> >
                    </a>
                </li>
                <% }) %>
            </ul>
        </div>
</body>

</html>