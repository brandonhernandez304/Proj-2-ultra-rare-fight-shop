<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="/stylesheet.css">
    <meta charset="utf-8" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poiret+One&family=Varela+Round&display=swap');
        </style>   
    <title>Ultra-Rare</title>
</head>

<body>
    
    <nav>
        <a href="/store/new">Add a New Item</a>
    </nav>
    <div id="shop-title">
        <h1>Ultra Rare Fight Gear Shop</h1>

    </div>
    <div class="index-container">
                <ul>
                    <div id="index-product">
                    <% products.forEach(product=> { %>
                        <li>
                            <!-- making a link to specific item (id) and displaying the name -->
                            <a href="/store/<%=product._id %>">
                                   <h3> <%=product.name; %> </h3>
                               
                              
                                   <img src=<%=product.img %> >
                                </a>
                            </li>
                            <% }) %>

                    </ul>
                </div>
        
        </div>
</body>

</html>